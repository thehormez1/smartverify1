<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Hormez Security Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: #f0f0f0;
        color: #222;
      }
      header {
        background: #1e1e1e;
        color: gold;
        padding: 20px;
        text-align: center;
        font-size: 24px;
      }
      .stats {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin: 20px;
        gap: 20px;
      }
      .stat {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        width: 200px;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      }
      table {
        width: 95%;
        margin: 20px auto;
        border-collapse: collapse;
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      }
      th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #eee;
      }
      th {
        background: #f9f9f9;
      }
      .used {
        color: green;
        font-weight: bold;
      }
      .invalid {
        color: red;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <header>Hormez Security Dashboard</header>
    <div class="stats" id="stats"></div>
    <table id="logTable">
      <thead>
        <tr>
          <th>Invitation Code</th>
          <th>Status</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>

    <script>
      const sheetUrl = "https://opensheet.elk.sh/1eGsh1gbojxTxy_JE2KfljWKGjtCXHkg2Gty9ntEcw-k/Sheet1";

      fetch(sheetUrl)
        .then(res => res.json())
        .then(data => {
          const stats = {
            total: data.length,
            used: data.filter(r => r.status.toLowerCase() === "used").length,
            invalid: data.filter(r => r.status.toLowerCase() === "invalid").length,
            lastScan: data[data.length - 1]?.timestamp || "-"
          };

          document.getElementById("stats").innerHTML = `
            <div class="stat"><strong>Total</strong><div>${stats.total}</div></div>
            <div class="stat"><strong>Used</strong><div class="used">${stats.used}</div></div>
            <div class="stat"><strong>Invalid</strong><div class="invalid">${stats.invalid}</div></div>
            <div class="stat"><strong>Last Scan</strong><div>${stats.lastScan}</div></div>
          `;

          const tbody = document.querySelector("#logTable tbody");
          data.reverse().forEach(row => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
              <td>${row.code}</td>
              <td class="${row.status.toLowerCase()}">${row.status}</td>
              <td>${row.timestamp}</td>
            `;
            tbody.appendChild(tr);
          });
        });
    </script>
  </body>
</html>

